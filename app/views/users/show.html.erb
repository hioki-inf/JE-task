<%= javascript_pack_tag "map", "data-turbolinks-track": "reload" %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render "info", user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render "books/form", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= render "books/index",books: @books %>
      <div>
        <h4>住所入力</h4>
          <div class="form-group row">
            <label name="postcode" class="col-2">"〒"</label>
            <input type="text" name="postcode" id="postcode" class="col-4" />
            <button id="jpostal-trigger" class="btn btn-outline-primary btn-sm col-3 offset-1">郵便番号から住所を入力</button>
          </div>
          <div class="form-group row">
            <label name="prefectures" class="col-2">"都道府県"</label>
            <input type="text" name="prefectures" id="prefectures" class="col-4" />
          </div>
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>
