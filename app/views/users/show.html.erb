<%= javascript_pack_tag "map", "data-turbolinks-track": "reload" %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render "info", user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render "books/form", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= render "books/index",books: @books %>
      <div>
        <h4>住所入力</h4>
          <div class="form-group row">
            <label name="postcode" class="col-2">〒</label>
            <input type="text" name="postcode" id="postcode" class="col-4" value="150-0043" />
          </div>
          <div class="form-group row">
            <label name="prefectures" class="col-2">都道府県</label>
            <input type="text" name="prefectures" id="prefectures" class="jump-target col-4" value="東京都" />
          </div>
          <div class="form-group row">
            <label name="address1" class="col-2">市区町村</label>
            <input type="text" name="address1" id="address1" class="jump-target col-4" value="渋谷区" />
          </div>
          <div class="form-group row">
            <label name="address2" class="col-2">以降</label>
            <input type="text" name="address2" id="address2" class="jump-target col-4" value="道玄坂２丁目２９−１" />
          </div>
          <button id="map-jump" class="btn btn-outline-primary btn-sm col-4 mb-3">入力内容の位置を表示</button>
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>
